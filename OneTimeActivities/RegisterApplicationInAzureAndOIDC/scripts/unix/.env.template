# Azure RBAC Configuration for GitHub Actions
# Copy this file to .env and update with your actual values
# DO NOT commit .env files to version control

# Service Principal Configuration
SERVICE_PRINCIPAL_OBJECT_ID="your-service-principal-object-id-here"

# Resource Group Names
MAIN_RESOURCE_GROUP="rg-your-project-dev"
TOOLS_RESOURCE_GROUP="rg-your-project-dev-tools"
TFSTATE_RESOURCE_GROUP="rg-your-project-tfstate-dev"
NETWORKING_RESOURCE_GROUP="your-networking-resource-group"

# Custom Role Names (organization-specific)
CUSTOM_ROLE_ASSIGNMENT_WRITER="[<team-name>-<project-name>-MANAGED]-<environment>-role-assignment-writer"
CUSTOM_RESOURCE_GROUP_CONTRIBUTOR="[<team-name>-<project-name>-MANAGED]-<environment>-resource-group-contributor"

# Azure Subscription (optional - defaults to current)
# SUBSCRIPTION_ID="your-subscription-id"
