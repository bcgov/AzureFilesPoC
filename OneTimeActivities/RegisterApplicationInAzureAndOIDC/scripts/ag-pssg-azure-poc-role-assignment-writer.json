{
    "properties": {
        "roleName": "<project-name>-dev-role-assignment-contributor",
        "description": "Allows writing and reading role assignments for automation.\n  ",
        "assignableScopes": [
            "/subscriptions/<subscription id>/resourceGroups/<resource group name>"
        ],
        "permissions": [
            {
                "actions": [
                    "Microsoft.Authorization/roleAssignments/write",
                    "Microsoft.Authorization/roleAssignments/read",
                    "Microsoft.Authorization/roleAssignments/delete"
                ],
                "notActions": [],
                "dataActions": [],
                "notDataActions": []
            }
        ]
    }
}