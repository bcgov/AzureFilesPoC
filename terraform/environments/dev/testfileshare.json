{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "stagpssgazurepocdev01",
            "location": "canadacentral",
            "sku": {
                "name": "Standard_ZRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "supportsHttpsTrafficOnly": true
            },
            "resources": [
                {
                    "type": "fileServices",
                    "apiVersion": "2021-04-01",
                    "name": "default",
                    "dependsOn": [
                        "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
                    ],
                    "properties": {}
                },
                {
                    "type": "fileServices/shares",
                    "apiVersion": "2021-04-01",
                    "name": "[parameters('fileShareName')]",
                    "dependsOn": [
                        "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'), '/fileServices/default')]"
                    ],
                    "properties": {
                        "shareQuota": 10,
                        "accessTier": "Hot",
                        "enabledProtocols": "SMB",
                        "metadata": {
                            "env": "dev"
                        },
                        "enabledOnboardedWindowsACL": true,
                        "largeFileSharesState": "Disabled",
                        "rootSquash": "NoRootSquash",
                        "backupEnabled": false,
                        "deleteRetentionPolicy": {
                            "enabled": false,
                            "days": 7
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}